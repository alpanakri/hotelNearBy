<%if(success && success.length){%>
    <div class="d-flex justify-content-center">
        <div class="alert alert-success  alert-dismissible fade show " role="alert" style="width: 40rem;">
            <%=success%>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
    <%}%>

<%if(error && error.length){%>
    <div class="d-flex justify-content-center">
        <div class="alert alert-danger  alert-dismissible fade show " role="alert" style="width: 40rem;">
            <%=error%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
         </div>
    </div>
<%}%>    