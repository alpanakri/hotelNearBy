<% layout('/layouts/boilerplate') -%>

  <body>
    <div class="container-fluid row row-col-md-2 row-col-sm-1 gap-4 justify-content-center mb-2 wrap mt-2 pt-2">
      <% for(listing of allListings){%>
        <a href="/listings/<%=listing?._id%>" class="listings">
          <div class="card p-0 pb-2 rounded-4 " style="width: 18rem; height:22rem">
            <img src="<%=listing?.image.url%>" class="card-img-top rounded-4" alt="listing image"
              style="width:100%; height:15rem" />
            <div class="card-body p-0 ps-2 mt-2">
              <p class="card-text">
                <b>
                  <%=listing?.title%>
                </b>
              </p>
              <p class="card-text">&#8377;<%=listing?.price.toLocaleString("en-IN")%>/week</p>
            </div>
          </div>
        </a>
        <%}%>
    </div>
  </body>